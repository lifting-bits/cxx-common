{
  "name": "sleigh",
  "version": "10.2.2",
  "description": "Unofficial CMake build for Ghidra Sleigh and decompiler libraries",
  "homepage": "https://github.com/lifting-bits/sleigh",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "compiler": {
      "description": "Build sleigh spec compiler"
    },
    "specs": {
      "description": "Compile and install the upstream sleigh specs",
      "dependencies": [
        {
          "name": "sleigh",
          "features": [ "compiler" ],
          "default-features": false,
          "host": true
        }
      ]
    },
    "support": {
      "description": "Include support libraries written by ToB"
    }
  }
}
